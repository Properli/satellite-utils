{
    "plugins": [
        "ava"
    ],
    "extends": [
        "airbnb-base",
        "airbnb-typescript/base",
        "plugin:ava/recommended"
    ],
    "parserOptions": {
        "project": "./tsconfig.eslint.json"
    },
    "rules": {
        "max-len": "off",
        "import/prefer-default-export": "off",
        "no-console": [
            "error", {
                "allow": [
                    "warn",
                    "error"
                ]
            }
        ]
    }
}